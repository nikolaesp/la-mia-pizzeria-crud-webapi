@model PizzaCategory

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Dettagli post</h1>
            </div>
            <div class="post-single-image-container">
                <img src="@Model.Pizza.Image">
            </div>
            <p>
                <strong>Titolo:</strong>
                @Model.Pizza.Title
            </p>
            <p>
                <strong>Contenuto:</strong>
                @Model.Pizza.Description
            </p>
           
        </div>
        <div>
            
            @foreach (Category category in Model.Categories)
            {
                if(category.Id == Model.Pizza.CategoryId)
                {
                    <p>
                        <strong>Categoria di pizza base:</strong>
                        @category.Title
                        
                    </p>
                    <p style="color:blue;">
                        <strong>Base prezzo:</strong>
                        @category.Price &euro;
                    </p>
                }
                else
                {
                    if (Model.Pizza.CategoryId == null)
                    {
                        <strong>Categoria di pizza:</strong>
                        <p>Nessuna</p>
                        break;
                    }
                    
                }
            }
            
        </div>


        <div>
           
            @foreach (Ingridient ingridients in Model.Pizza.Ingridients)
            {
                if (ingridients != null)
                {
                    <p style="color:green;">
                                <strong>@ingridients.Name</strong>
                                @ingridients.Price &euro;

                            </p>
                           
                }
                else
                {
                    if (Model.Pizza.Ingridients == null)
                    {
                                    <strong>Categoria di pizza:</strong>
                                    <p>Nessuna</p>
                        break;
                    }

                }
            }

        </div>

         <h3>
                <strong>Prezzo Totale con Ingridienti:</strong>
            @Model.Pizza.Price &euro;
            </h3>


    </div>
</div>
